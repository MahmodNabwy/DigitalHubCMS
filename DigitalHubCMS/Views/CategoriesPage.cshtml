@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.CategoriesPage>

@using Clean.Core.Models.ViewModels
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels

@{
    // Get all the CategoryType nodes under the current CategoriesPage
    var categories = Model.Children.Where(x => x.ContentType.Alias == "CategoryType");
}

<h1>@Model.Name</h1>

@if (Model.ContentRows != null)
{
    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    @Html.GetBlockListHtml(Model.ContentRows)


                </div>
            </div>
        </div>
    </article>
}
